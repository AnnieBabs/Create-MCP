{
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "prefer-const": "error",
    "no-console": "off"
  },
  "ignorePatterns": [
    "lib/**/*",
    "node_modules/**/*",
    "templates/**/*"
  ]
}
